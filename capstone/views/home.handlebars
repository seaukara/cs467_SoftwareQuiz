



<h1> Welcome {{full_name}}</h1>

<div class="row">
    <div class="col-lg-12">
        {{!--Employee table start--}}
        <div class="panel panel-default">
            <div class="panel-heading" style="padding:10px;">
                <h2> <strong> Employees </strong> </h2>
                <div class="panel-actions">
                    <a href="create_employee">
                        <button class="btn btn-info btn-sm" style="margin-right:5px">
                            <span style="font-weight:400; line-height:0px">Create Employee</span>
                        </button>
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <table class="table bootstrap-datatable countries">
                    <thead>
                    <tr>
                        <th >Employee Name</th>
                        <th >Email</th>
                        <th style="width:10%">Results</th>
                        <th style="width:35%">Performance</th>
                        <th style="width:10%">Delete</th>
                    </tr>
                    </thead>
                <tbody>
                    {{#each employee}}
                    <tr >
                        <td>
                            <a href="/update_employee?id={{employee_id}}" style='background: transparent;'>
                            <button class="btn btn-info btn-sm"> {{fname}} {{lname}} </button></td>
                            </a>

                        <td>{{email}}</td>
                        <td>
                            <a href="/results/results_employee?employee_id={{employee_id}}" style='background: transparent;'>
                                <img src="static/img/test.png" style="height:18px;">
                            </a>
                        </td>
                        <td>
                            <div class="progress thin">
                                <div class="progress-bar-danger" role="progressbar" aria-valuenow="73" aria-valuemin="0" aria-valuemax="100" style="width: 73%">
                                </div>
                                <div class="progress-bar-warning" role="progressbar" aria-valuenow="27" aria-valuemin="0" aria-valuemax="100" style="width: 27%">
                                </div>
                            </div>
                            <span class="sr-only">73%</span>
                        </td>
                        <td>
                            <button type="button" class="btn" style='background: transparent;' data-toggle="modal" data-target="#employeeModal{{employee_id}}"}><img src="static/img/delete.png" style="height:18px; "></button>
                            </a>
                            <div class="container">
                                <!-- Modal -->
                                <div class="modal fade" id="employeeModal{{employee_id}}" role="dialog">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div style="font-size:20px" class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <p>Are you sure you would like to delete this employee?</p>
                                            </div>
                                            <div class="modal-body">
                                                <a href="home/delete_employee?id={{employee_id}}">
                                                <button class="btn btn-info btn-lg" >OK</button></a>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                    {{/each}}
                </tbody>
                </table>
            </div>
        </div>
        {{!--Employee table end--}}
        <br>
        {{!--Quiz table start--}}
        <div class="panel panel-default">
            <div class="panel-heading" style="padding:10px;">
                <h2><strong>Quizzes</strong></h2>
                <div class="panel-actions">
                    <a href="create_quiz">
                        <button class="btn btn-info btn-sm">
                            <span style="font-weight:400; line-height:0px">Create Quiz</span>
                        </button>
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <table class="table bootstrap-datatable countries">
                    <thead>
                    <tr>
                        <th >Quiz</th>
                        <th >Access Code</th>
                        <th style="width:10%">Results</th>
                        <th style="width:10%; text-align: center">View/Edit</th>
                        <th style="width:30%">Performance</th>
                        <th style="width:10%; text-align: center">Delete</th>
                    </tr>
                    </thead>
                <tbody>
                    {{#each quiz}}
                    <tr>
                        <td>{{quiz_name}}</td>
                        <td>
                            {{#if access_code}}
                                {{access_code}}
                            {{else}}
                                <a href="/home/publish_quiz?id={{quiz_id}}">
                                    <button class="btn btn-info btn-sm" >Publish</button></a>
                                </a>
                            {{/if}}
                        </td>
                        <td>
                            <a href="/results/results_quiz?quiz_id={{quiz_id}}" class="btn" style='background: transparent;'>
                                <img src="static/img/test.png" style="height:18px; ">
                            </a>
                        </td>

                        <td style="text-align:center">
                            <a href="/view_quiz?id={{quiz_id}}" style='background: transparent; text-align:center'>
                            <img src="static/img/edit.png" style="height:18px;">
                            </a>
                        </td>

{{!--                            <button class="btn" style='background: transparent;'><img src="static/img/edit.png" style="height:18px; "></button></td>--}}

                        <td>
                            <div class="progress thin">
                                <div class="progress-bar-danger" role="progressbar" aria-valuenow="73" aria-valuemin="0" aria-valuemax="100" style="width: 73%">
                                </div>
                                <div class="progress-bar-warning" role="progressbar" aria-valuenow="27" aria-valuemin="0" aria-valuemax="100" style="width: 27%">
                                </div>
                            </div>
                            <span class="sr-only">73%</span>
                        </td>
                        <td style="text-align: center">
                            <button type="button" class="btn" style='background: transparent;' data-toggle="modal" data-target="#myModal{{quiz_id}}"}><img src="static/img/delete.png" style="height:18px; "></button>
                        </td>
                    </tr>
                    <div class="container">
                        <!-- Modal -->
                        <div class="modal fade" id="myModal{{quiz_id}}" role="dialog">
                            <div class="modal-dialog">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div style="padding:3px; padding-right:3px;font-size:20px" class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you would like to delete this quiz?</p>
                                        <a href="home/delete_quiz?id={{quiz_id}}">
                                        <button class="btn btn-info btn-lg" >OK</button></a>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </tbody>
                </table>


            </div>
            {{!--Quiz table end--}}
        </div>



    </div>
</div>

</section>
</section>

